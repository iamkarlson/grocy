{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Home Assistant on port 8123",
            "type": "shell",
            "command": "scripts/develop",
            "isBackground": true,
            "problemMatcher": {
                "owner": "homeassistant",
                "pattern": {
                    "regexp": "."
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": ".*Home Assistant.*started.*|.*Serving on.*"
                }
            }
        },
        {
            "label": "Rerun setup",
            "type": "shell",
            "command": "scripts/setup",
            "problemMatcher": []
        }
    ]
}
